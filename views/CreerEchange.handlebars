<body>
    <h2 id="title_table">Créer votre échange</h2>


    <div id="contenant">
        <form id="form-echange" novalidate>
            <table id="brique-table">
                <thead>
                    <tr>
                        <th scope="col">Nom de la Brique</th>
                        <th scope="col">Image</th>
                        <th scope="col">Valeur</th>
                        <th scope="col">Quantité</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each briques}}
                    <tr>
                        <td>{{this.nom}}</td>
                        <td><img src="../assets/{{this.image}}" alt="{{this.nom}}" style="width: 90px;"></td>
                        <td>{{this.valeur}} $/brique</td>
                        <td>
                            <input type="number" min="0" max="100" placeholder="0" data-id-brique="{{this.id_brique}}">
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>

            <label for="nom-echange">Nom de l'échange :</label>
            <input type="text" id="nom-echange" required minlength="5" maxlength="200">
            <button type="submit" id="submit-button">Soumettre l'échange</button>

        </form>
        <p id="erreur-nom-echange"></p>
    </div>

</body>